<!DOCTYPE html>
<html lang="es">

<head>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</head>

<body>


  <div class="container my-5">
    <div class=jumbotron>
      <h1>Registro</h1>
      <br>

      <form action="/signup" method="post">

        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">Correo: </span>
          </div>
          <input type="email" id="email" name="email" class="form-control" aria-label="Small"
            aria-describedby="inputGroup-sizing-sm" placeholder="Correo electrinico" required>
        </div>

        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">clave: </span>
          </div>
          <input type="password" id="password" name="password" class="form-control" aria-label="Small"
            aria-describedby="inputGroup-sizing-sm" placeholder="Clave" required>
        </div>

        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">username: </span>
          </div>
          <input type="text" name="username" id="username" class="form-control" aria-label="Small"
            aria-describedby="inputGroup-sizing-sm" placeholder="username" required>
        </div>
        
        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">Nombre: </span>
          </div>
          <input type="text" name="firstname" id="firstname" class="form-control" aria-label="Small"
            aria-describedby="inputGroup-sizing-sm" placeholder="Nombre" required>
        </div>


        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">Apellido: </span>
          </div>
          <input type="text" id="lastname" name="lastname" class="form-control" aria-label="Small"
            aria-describedby="inputGroup-sizing-sm" placeholder="Apellido" required>
        </div>



        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">Avatar: </span>
          </div>
          <input type="url" id="avatar" name="avatar" class="form-control" aria-label="Small"
            aria-describedby="inputGroup-sizing-sm" placeholder="avatar" required>
        </div>

        <div class="form-group">
          <input type="submit" value="Enviar" class="btn btn-success">
        </div>
      </form>

      <hr>
      <div class="text-center"></div>
      <button class="btn btn-success my-3" onclick="goSignup()">Ingresar</button>
    </div>
  </div>

  <script>
    function redireccionar(pagina) {
      location.href = pagina;
    }

    function goSignup() {
      redireccionar('/login');
    }
  </script>

</body>

</html>